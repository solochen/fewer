<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <com.yilan.lib.playerlib.utils.ProgressButton
        android:id="@+id/lib_btn_progress_answer_a"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:singleLine="true"
        app:progressbtn_backgroud_color="@android:color/holo_blue_light"
        app:progressbtn_backgroud_second_color="@android:color/white" />

    <TextView
        android:id="@+id/lib_tv_progress_answer_option"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:gravity="center_vertical"
        tools:text="问题的答案"/>

    <TextView
        android:id="@+id/lib_tv_progress_select_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="25dp"
        android:gravity="center_vertical"
        tools:text="28.5万"/>

</FrameLayout>