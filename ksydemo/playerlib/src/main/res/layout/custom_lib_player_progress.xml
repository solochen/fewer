<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >

    <com.yilan.lib.playerlib.widget.ProgressButton
        android:id="@+id/lib_btn_progress_answer_a"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:singleLine="true"
        app:progressbtn_backgroud_color="@color/lib_answer_progress_bg"
        app:progressbtn_backgroud_second_color="@color/lib_answer_progress_second_bg" />

    <TextView
        android:id="@+id/lib_tv_progress_answer_option"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:gravity="center_vertical"
        android:textColor="@color/lib_answer_progress_option_color"
        tools:text="问题的答案"/>

    <TextView
        android:id="@+id/lib_tv_progress_select_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="25dp"
        android:textColor="@color/lib_answer_progress_option_selected_color"
        android:gravity="center_vertical"
        tools:text="28.5万"/>

</FrameLayout>